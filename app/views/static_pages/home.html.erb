<% if signed_in? %>
	<div class="row">
    	<aside class="span4">
      		<section><%= render 'shared/user_info' %> </section>
			<section><%= render 'shared/micropost_form' %> </section>
    	</aside>
        <div class="span8">
            <h3>Preventivi Richiesti</h3>
            <%= render 'shared/feed' %>
        </div>
    </div>

<% else %>

    <div class="center hero-unit">
    	<h1>Benvenuto in Newco, Qui potrai effettuare la richiesta e l' offerta di preventivi!</h1>

    	<%= link_to "Registrati Adesso!", signup_path, class: "btn btn-large btn-primary" %> </div>
    	<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>
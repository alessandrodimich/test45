<% provide(:title, @user.full_name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user, size: 50 %>
				<%= @user.full_name %>
			</h1>
		</section>
	</aside>

	<div class="span8">
		<% if @user.microposts.any? %>
			<h3>Preventivi (<%= @user.microposts.count %>)</h3>
			<ol class="microposts"> <%= render @microposts %> </ol>
			<%= will_paginate @microposts %>
		<% end %>
  	</div>
</div>